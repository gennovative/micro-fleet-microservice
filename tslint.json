{
    "rules": {
        "arrow-return-shorthand": true,
        "callable-types": true,
        "class-name": true,
        "comment-format": [
            true,
            "check-space"
        ],
        "eofline": true,
        "import-spacing": true,
        "indent": [
            true,
            "spaces"
        ],
        "max-line-length": [
            true,
            140
        ],
        "member-access": true,
        "no-arg": true,
        "no-construct": true,
        "no-duplicate-super": true,
        "no-empty": true,
        "no-empty-interface": false,
        "no-eval": true,
        "no-misused-new": true,
        "no-shadowed-variable": true,
        "no-string-throw": true,
        "no-trailing-whitespace": true,
        "no-unsafe-finally": true,
        "no-var-keyword": true,
        "one-line": [
            true,
            "check-open-brace",
            "check-whitespace"
        ],
        "prefer-const": true,
        "quotemark": [
            true,
            "single"
        ],
        "semicolon": [
            true,
            "never"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "ignore",
                    "typeLiterals": "ignore"
                },
                "singleline": "never"
            }
        ],
        "triple-equals": [
            false,
            "allow-null-check"
        ],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "unified-signatures": true,
        "variable-name": [
            true,
            "ban-keywords"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ],
        "ban": [
            true,
            "eval",
            "fit",
            "fdescribe",
            {
                "name": "$",
                "message": "please don't"
            }
        ]
    }
}